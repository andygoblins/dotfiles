set autoindent
set const # display cursor info at bottom
set cut # cut lines like in emacs
set nowrap
set regexp # regular expression searches by default
set suspend # suspend with ^z
set tabsize 4

## syntax highlighting
include "/usr/share/nano/awk.nanorc"
include "/usr/share/nano/c.nanorc"
include "/usr/share/nano/css.nanorc"
include "/usr/share/nano/html.nanorc"
include "/usr/share/nano/java.nanorc"
include "/usr/share/nano/makefile.nanorc"
include "/usr/share/nano/nanorc.nanorc"
include "/usr/share/nano/perl.nanorc"
include "/usr/share/nano/python.nanorc"
include "/usr/share/nano/ruby.nanorc"
include "/usr/share/nano/sh.nanorc"

## keybindings
# i/o
bind ^s writeout all
bind ^q exit all
bind ^f whereis all
bind M-f gotoline all
bind ^b nextbuf all
bind M-b prevbuf all
bind ^z undo all
bind ^y redo all
bind M-c cancel all

# navigation
bind ^o left all
bind ^e down all
bind ^u right all
bind F13 up all #only for Andy's hacked nano
bind M-o prevword all
bind M-e endpara main
bind M-u nextword all
bind M-. beginpara main
bind ^p end all
bind F14 home all #only for Andy's hacked nano

# insert/delete
bind ^Space mark all
bind ^c copytext all
bind ^k cut all
bind ^r uncut all
bind ^d delete all

